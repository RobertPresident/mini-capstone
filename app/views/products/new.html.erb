<h1>Make a New Product</h1>

<!-- post -->
<!-- label -->
<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :album %>
    <%= text_field_tag :album %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :stock %>
    <%= text_field_tag :stock %>
  </div>
  
  <%= submit_tag 'Bump it!' %>
<% end %>