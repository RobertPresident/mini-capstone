<h1>Store App</h1>
 
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 col-sm-5">
      <div class="thumbnail list-view">
        <h2><a href="/products/<%= product.id %>"><%= product.name %></a></h2>
        <h3>User: <%= product.name %></h3>
        <h3>Price: <%= product.price %></h3>
        <a href="/products/<%= product.id %>" title="View Product"><img src="<%= product.images.first.url %>" alt="<%= product.name %>" class="img-responsive product_single_image"></a>        
        <h3>Description: <%= product.description %></h3>
        <h3>Stock: <%= product.stock %></h3>

        <br>
      </div>
    </div>
  <% end %>  
</div>
